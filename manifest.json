{
  "manifest_version": 3,
  "name": "App Sidebar",
  "version": "1.0",
  "description": "A sidebar with quick access to apps",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [{
    "resources": [
      "sidebar.html",
      "styles.css",
      "sidebar.js",
      "icons/*"
    ],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "css": ["styles.css"],
    "run_at": "document_start",
    "all_frames": false
  }],
  "action": {
    "default_title": "App Sidebar"
  },
  "background": {
    "service_worker": "background.js"
  }
}